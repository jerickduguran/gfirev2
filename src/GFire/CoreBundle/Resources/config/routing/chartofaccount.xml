<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="chartofaccount" path="/">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:index</default>
    </route>

    <route id="chartofaccount_show" path="/{id}/show">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:show</default>
    </route>

    <route id="chartofaccount_new" path="/new">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:new</default>
    </route>

    <route id="chartofaccount_create" path="/create">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="chartofaccount_edit" path="/{id}/edit">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:edit</default>
    </route>

    <route id="chartofaccount_update" path="/{id}/update">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="chartofaccount_delete" path="/{id}/delete">
        <default key="_controller">GFireCoreBundle:ChartOfAccount:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
