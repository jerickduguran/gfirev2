<script type="text/javascript">
    $(document).ready(function () {
        var options = {
            dataType: 'json',
            clearForm: true,
            resetForm: true,
            timeout:   10000,
            beforeSubmit: function(){
                $.blockUI({ message: jyd.loadingMessage(null)});
            },
            success: function(resp){
                if(resp.success == true){
                    $("#account_entry_list").html(resp.list);
                    _modal.modal('hide');
                }else{
                    $('#modal-account-entry').find(".modal-body").html(resp.add_new);
                }
            }
        };
        $('form#invoice_account_entry').ajaxForm(options);
    })
</script>

