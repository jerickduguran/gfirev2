<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="GFire\CoreBundle\Entity\ProjectRepository" name="GFire\CoreBundle\Entity\Project"  table="gf__project">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="code" type="string" column="code" length="150"/>
    <field name="title" type="string" column="title" length="150"/>
    <field name="description" type="text" column="description"/>
    <field name="createdAt" type="datetime" column="created_at"/>
    <field name="updatedAt" type="datetime" column="updated_at" nullable="true"/>

    <lifecycle-callbacks>
      <lifecycle-callback type="prePersist" method="prePersist" />
      <lifecycle-callback type="postPersist" method="postPersist" />
    </lifecycle-callbacks>

      <one-to-many target-entity="GFire\InvoiceBundle\Entity\InvoiceAccountEntry" mapped-by="project" field="invoiceAccountEntries" />
  </entity>
</doctrine-mapping>
