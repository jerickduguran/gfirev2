                <td>{{ item.generalLibrary }}</td>
                <td>{{ item.totalAmount }}</td>
                <td>{{ item.currency }}</td>
                <td>{{ item.dueDate|date("F d, Y") }}</td>
                <td>{{ item.status }}</td>
                <td>{{ item.createdAt|date("F d, Y h:i A") }}</td>
                <td>{{ item.updatedAt|date("F d, Y h:i A") }}</td>
                <td class="text-center">
                    <a href="{{ path('invoice_edit',{'id': item.id })}}"  title="Edit" class="btn btn-primary">Edit</a>
                    <a href='' title="Remove" class="btn btn-primary delete-item"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
