<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="prepayment" path="/">
        <default key="_controller">GFireCoreBundle:PrePayment:index</default>
    </route>

    <route id="prepayment_new" path="/new">
        <default key="_controller">GFireCoreBundle:PrePayment:new</default>
    </route>

    <route id="prepayment_create" path="/create">
        <default key="_controller">GFireCoreBundle:PrePayment:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="prepayment_edit" path="/{id}/edit">
        <default key="_controller">GFireCoreBundle:PrePayment:edit</default>
    </route>

    <route id="prepayment_update" path="/{id}/update">
        <default key="_controller">GFireCoreBundle:PrePayment:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="prepayment_delete" path="/{id}/delete">
        <default key="_controller">GFireCoreBundle:PrePayment:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
