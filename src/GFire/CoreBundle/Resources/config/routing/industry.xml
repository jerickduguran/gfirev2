<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="industry" path="/">
        <default key="_controller">GFireCoreBundle:Industry:index</default>
    </route>

    <route id="industry_show" path="/{id}/show">
        <default key="_controller">GFireCoreBundle:Industry:show</default>
    </route>

    <route id="industry_new" path="/new">
        <default key="_controller">GFireCoreBundle:Industry:new</default>
    </route>

    <route id="industry_create" path="/create">
        <default key="_controller">GFireCoreBundle:Industry:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="industry_edit" path="/{id}/edit">
        <default key="_controller">GFireCoreBundle:Industry:edit</default>
    </route>

    <route id="industry_update" path="/{id}/update">
        <default key="_controller">GFireCoreBundle:Industry:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="industry_delete" path="/{id}/delete">
        <default key="_controller">GFireCoreBundle:Industry:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
