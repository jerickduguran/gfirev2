{% extends "GFireSiteBundle::layout.login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    {% block fos_user_content %}
        <div class="form-login">
            {% if error %}
                <div class="alert alert-danger alert-login">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                </div>
            {% endif %}
            <form class="contact-form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <h3>Sign In </h3>
                <div class="form-group">
                    <input type="text" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" required="required" />
                </div>
                <div class="remember">
                    <input data-skin="square" data-color="aero" id="remember" type="checkbox" id="remember_me" name="_remember_me" value="on"  class="styled"/> <label> {{ 'Remember Me'|trans }}</label>

                    {% block login_action_buttons %}
                        <button class="btn btn-large btn-primary pull-right" type="submit" id="_submit" name="_submit" />Login</button>
                    {% endblock login_action_buttons %}
                </div>

                <a class="forgot-password" href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot Password' }}</a>

            </form>
        </div>
        <script type="text/javascript">
            $(document).ready(function(){
                //Custom.init();
            });
        </script>
    {% endblock fos_user_content %}
{% endblock content %}
