{% if pager.haveToPaginate %}

    <nav class="text-right">
        <ul class="pagination">
            {% if pager.page > 2  %}
                <li><a href="{{ path('invoice')}}" class="page_nav">&laquo;</a></li>
            {% endif %}

            {% if pager.page != pager.previouspage %}
                <li><a href="{{ path('invoice',{'page' : pager.previouspage,'sort_field':sort_field,'sort_order': sort_order})}}" title="" class="page_nav">&lsaquo;</a></li>
            {% endif %}

            {% for page in pager.getLinks(5) %}
                {% if page == pager.page %}
                    <li class="active"><a href="{{ path('invoice',{'page' : page,'sort_field':sort_field,'sort_order': sort_order})}}" class="page_nav">{{ page }}</a></li>
                {% else %}
                    <li><a href="{{ path('invoice',{'page' : page,'sort_field':sort_field,'sort_order': sort_order})}}" class="page_nav">{{ page }}</a></li>
                {% endif %}
            {% endfor %}

            {% if pager.page != pager.nextpage %}
                <li><a href="{{ path('invoice',{'page' : pager.nextpage,'sort_field':sort_field,'sort_order': sort_order})}}" title="" class="page_nav">&rsaquo;</a></li>
            {% endif %}

            {% if pager.page != pager.lastpage and pager.lastpage != pager.nextpage %}
                <li><a href="{{ path('invoice',{'page' : pager.lastpage,'sort_field':sort_field,'sort_order': sort_order})}}" title="" class="page_nav">&raquo;</a></li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
