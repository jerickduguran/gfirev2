<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fixasset" path="/">
        <default key="_controller">GFireCoreBundle:FixAsset:index</default>
    </route>

    <route id="fixasset_new" path="/new">
        <default key="_controller">GFireCoreBundle:FixAsset:new</default>
    </route>

    <route id="fixasset_create" path="/create">
        <default key="_controller">GFireCoreBundle:FixAsset:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="fixasset_edit" path="/{id}/edit">
        <default key="_controller">GFireCoreBundle:FixAsset:edit</default>
    </route>

    <route id="fixasset_update" path="/{id}/update">
        <default key="_controller">GFireCoreBundle:FixAsset:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="fixasset_delete" path="/{id}/delete">
        <default key="_controller">GFireCoreBundle:FixAsset:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
