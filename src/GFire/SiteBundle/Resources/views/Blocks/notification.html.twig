{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-warning" role="alert"><i class="glyphicon glyphicon-remove-circle"></i> {{ flashMessage }}</div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success" role="alert"><i class="glyphicon glyphicon-ok-circle"></i> {{ flashMessage }}</div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('info') %}
    <div class="alert alert-info" role="alert"><i class="glyphicon glyphicon-info-sign"></i>  {{ flashMessage }}</div>
{% endfor %}